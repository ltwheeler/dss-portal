<h1> Favorite Apps </h1>

<div id="favorites_list">
    <ul id="sortableFav" class="connectedSortable">
	<% @favorites.each do |fav| %>
  	<li class="favorite" id="<%= fav.id %>">
    		<%= fav.id %>, <%= fav.app_id %>,  <%= fav.position %>
  	</li>
	<% end %>
    </ul>
</div>

<h1>Applications </h1>

<div id="apps_list">
    <ul id="sortableApp" class="connectedSortable">
	<% @apps.each do |app| %>
  	<li class="<%= app[:class] %>" id="<%= app[:id] %>a">
    		<%= app[:name] %>, <%= app[:class] %>, <%= app[:id] %>
  	</li>
	<% end %>
    </ul>
</div>

