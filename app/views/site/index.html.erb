<h1> Favorite Apps </h1>

<div id="list-A">
    <ul id="sortableFav" class="connectedSortable">
	<% @favorites.each do |fav| %>
  	<li class="favorite" id="<%= fav.id %>">
    		<%= fav.app_id %>, <%= fav.position %>
  	</li>
	<% end %>
    </ul>
</div>

<h1>Applications </h1>

<div id="list-B">
    <ul id="sortableApp" class="connectedSortable">
	<% @current_user.accessible_applications.each do |apps| %>
  	<li class="rm" id="<%= apps.id %>">
    		<%= apps.application_name %>
  	</li>
	<% end %>
    </ul>
</div>

